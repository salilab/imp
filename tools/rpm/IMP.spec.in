%{_prefix}/bin/*
%{_libdir}/libimp*.so.*
%{_libdir}/libRMF*.so
%{_libdir}/IMP
%{_libdir}/python2*/site-packages/IMP
%{_libdir}/python2*/site-packages/_IMP*so
%{_libdir}/python2*/site-packages/RMF*
%{_libdir}/python2*/site-packages/_RMF*so
