Import('env')

# modules must be listed after modules that use them
modules=['compatibility',
         'base',
         'benchmark',
         'librmf',
         'cgal',
         'algebra',
         'kernel',
         'display',
         'statistics',
         'core',
         'container',
         'atom',
         'rmf',
         'domino',
         'em',
         'saxs',
         'gsl',
         'modeller',
         'restrainer',
         'multifit',
         'em2d',
         'bullet',
         'misc',
         'system',
         'isd']
# always last
modules.append('example')

if env.get('local', False):
    for d in Glob("*/SConscript"):
        p= str(d).split("/")[0]
        if not p in modules:
            modules.append(p)

for p in modules:
    SConscript(p+"/SConscript")
