Import('env')
import scons_tools.dependency

scons_tools.dependency.add_external_library(env, "ANN", ["ANN"],
                                            "ANN/ANN.h")

env.IMPModuleBuild(version='nightly-17/2/2012',
                   required_modules=['base'],
                   lib_only_required_modules=['compatibility'],
                   lib_only_optional_modules=['cgal'],
                   optional_dependencies=['ANN'])
