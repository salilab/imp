Import('env')

import scons_tools

scons_tools.dependency.add_external_library(env, "google_perftools_profile",
                                            ["profiler"],
                                            "google/profiler.h",
                                            body=';')


module_env=env.IMPModuleBuild(version='nightly-6/2/2012',
                              required_modules=['base'],
                              optional_dependencies=['google_perftools_profile'])
