import os.path

Import('env')

# Python files
files = ['test.py', 'utils.py']

# Install in lib directory:
pymod = env.LinkInstall('#/build/lib/IMP/', files)

pydir = os.path.join(env['pythondir'], 'IMP')
pyinst = env.Install(pydir, files)
env.Alias('install', pyinst)
env.Alias('kernel-install', pyinst)

Return('pymod')
